<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bmi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context="com.example.a5735512043.obesity.BmiActivity"
    android:weightSum="1">
    <TextView
        android:id="@+id/bmiTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="คำนวณมวลร่างกาย(BMI)"
        android:textSize="24sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="55dp"
        />
    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/heightEt"
        android:hint="ส่วนสูง(cm)"
        android:ems="10"
        android:inputType="number|numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""/>
    <EditText
        android:id="@+id/weightEt"
        android:hint="น้ำหนัก(kg)"
        android:ems="10"
        android:inputType="number|numberDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""/>
    <Button
        android:id="@+id/calBt"
        android:layout_marginTop="10dp"
        android:text="คำนวณ"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/showTv"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_weight="0.60" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/checkBt"
            android:textSize="18sp"
            android:text="อาหารที่เหมาะสำหรับคุณ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>



</LinearLayout>
