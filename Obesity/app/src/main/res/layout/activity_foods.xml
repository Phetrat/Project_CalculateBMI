<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_foods"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:gravity="center"
    android:background="@drawable/bg"
    tools:context="com.example.a5735512043.obesity.FoodsActivity">

    <LinearLayout
        android:id="@+id/b"
        android:layout_below="@+id/aa"
        android:layout_width="300dp"
        android:layout_height="170dp"
        android:padding="10dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/main"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">
            <ImageView
                android:id="@+id/mainfoodIv"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/ai"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textSize="20sp"
                android:gravity="center"
                android:text="อาหารจานหลัก"
                android:layout_weight="0.30" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/line"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">
        <ImageView
            android:id="@+id/linefoodIv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/fl"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textSize="20sp"
            android:gravity="center"
            android:text="อาหารประเภทเส้น"
            android:layout_weight="0.30" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/cc"
        android:layout_below="@+id/aa"
        android:layout_width="300dp"
        android:layout_height="170dp"
        android:padding="10dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/fruit"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">
            <ImageView
                android:id="@+id/fruitIv"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/friut"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textSize="20sp"
                android:gravity="center"
                android:text="ผลไม้"
                android:layout_weight="0.30" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/snack"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">
            <ImageView
                android:id="@+id/snackIv"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/fs"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textSize="20sp"
                android:gravity="center"
                android:text="ของว่าง"
                android:layout_weight="0.30" />
        </LinearLayout>

    </LinearLayout>

</RadioGroup>
